<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    package="tk.lakatstudio.timeallocator">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".OtherActivityDialog"
            android:launchMode="singleInstance" android:excludeFromRecents="true"
            android:taskAffinity="" android:theme="@style/Theme.AppCompat.Dialog">
        </activity>

        <activity android:name=".DayItemActivity"/>
        <activity android:name=".TodoItemActivity"/>
        <activity android:name=".RegimeActivity"/>
        <activity android:name=".SettingsActivity"/>
        <receiver
            android:name=".ATBroadcastReceiver"
            android:enabled="true"
            android:exported="false" />
    </application>

</manifest>