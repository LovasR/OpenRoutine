<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dayPlannerItemRoot"
    android:background="@drawable/highlight_transition">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/compact_outline_background"
        android:id="@+id/dayPlannerItemLinearLayout"
        android:padding="10dp"
        android:layout_marginVertical="5dp"
        android:layout_marginHorizontal="10dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/dayPlannerItemStart"
                android:gravity="center"
                android:textColor="?android:attr/textColorPrimary"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="4dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/dayPlannerItemLength"
                android:gravity="center"
                android:textColor="?android:attr/textColorPrimary"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="4dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="10"
                android:id="@+id/dayPlannerItem"
                android:gravity="start|center"
                android:maxWidth="200dp"
                android:layout_marginHorizontal="10dp"
                android:ellipsize="end"
                android:textColor="?android:attr/textColorPrimary"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="90"
                android:layout_gravity="end"
                android:gravity="center"
                android:paddingHorizontal="10dp"
                android:padding="10dp"
                android:textColor="@color/color_text_day_only"
                android:id="@+id/dayPlannerItemActivity"/>
        </LinearLayout>

    </LinearLayout>
</FrameLayout>
