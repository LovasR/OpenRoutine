<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <PreferenceCategory
        android:title="@string/format_settings_title">
        <EditTextPreference
            android:key="date_format"
            android:title="@string/date_format_setting_title"
            android:defaultValue="@string/default_date_format"
            android:summary="@string/date_format_setting_summary"/>
        <Preference
            android:key="color"
            android:title="@string/date_format_setting_info_title">
            <intent
                android:action="android.intent.action.VIEW"
                android:data="@string/date_format_setting_info_data"/>
        </Preference>
        <ListPreference
            android:defaultValue="0"
            android:entries="@array/hour_format_setting_entries"
            android:entryValues="@array/setting_entries"
            android:key="hour_format"
            android:title="@string/hour_format_setting_title"
            android:summary="@string/hour_format_setting_summary"/>
        <ListPreference
            android:defaultValue="0"
            android:entries="@array/dark_mode_setting_entries"
            android:entryValues="@array/setting_entries"
            android:key="dark_mode"
            android:title="@string/dark_mode_setting_title"
            android:summary="@string/dark_mode_setting_summary"/>
    </PreferenceCategory>
    <PreferenceCategory
        android:title="Data">
        <Preference
            android:key="export_data"
            app:title="@string/data_export_setting_title"/>
        <Preference
            android:key="import_data"
            app:title="@string/data_import_setting_title"/>

    </PreferenceCategory>
</PreferenceScreen>